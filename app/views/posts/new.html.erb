<%= render "partialadmin/blognav" %>
<div class="postPage">
  <div class="container">

    <div class="d-flex flex-column align-items-center mt-3"> <%# コンテナの中でさらに中央寄せ %>
      <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card"> <%# 画面の伸縮で崩さないために %>
        <div class="card">
          <div class="card-header"><%# cardのheaderとbodyというクラスを付けることでレイアウトが整う%>
            投稿画面
          </div>
          <div class="card-body">

            <%= form_with model: @post, class: "upload-images p-0 border-0" do |f| %>
              <div class="form-group row mt-2">
                <div class="col ml-0"> <%# md-の調整で長さ、marginの方が調整効く %>
                  <%= f.text_field :caption, class: "form-control border-1", autofocus: true, placeholder: "タイトル入力" %>
                </div>
              </div>
              <div class="form-group mt-4">
                <%= f.fields_for :photos do |i| %>
                  <%= i.file_field :image %>
                <% end %>
              </div>
              <div class="text-center mt-5">
                <%= f.submit "投稿する", class: "btn btn-info" %>
              </div>
            <% end %>

            <div class="text-center mt-3">
              <%= link_to "ホームへ", adminhome_path %>
            </div>

          </div>
        </div>
      </div>
    </div>

  </div>
  <%= render "partialadmin/drawer" %>
</div>
