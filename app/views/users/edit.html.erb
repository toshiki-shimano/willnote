<%= render "partialnote/normalnav" %>
<div class="userProfilePage">
  <div class="container">
    <h1 class="text-center mt-3">プロフィール変更</h1>
    <div class="mt-3"></div>

    <%= form_with model: @user, local: true do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <strong>入力内容にエラーがあります</strong>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
          <% end %> 
        </ul>
      </div>
    <% end %> 



      <div class="form-group space">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "名前を入力してください" %>
      </div>
      <div class="form-group space mt-3">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", placeholder: "メールアドレスを入力してください" %>
      </div>
      <div class="text-center mt-3">
        <%= f.submit nil, class: "btn btn-info" %>
      </div>
    <% end %>
    
  </div>
</div>