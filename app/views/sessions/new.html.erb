<%= render "partialnote/normalnav" %>
<div class="loginPage">
  <div class="container">
  <% if flash.alert.present? %>
    <div class="alert alert-danger" id="flashMessage">
      <%= flash.alert %>
    </div>
  <% end %>
    <h1 class="text-center mt-4">ログイン</h1>
    <div class="text-center mb-4">
      <i class="fas fa-cheese fa-4x cheese" data-fa-transform="down-3"></i>
      <span><%= link_to "新規登録はこちら", registration_path, class: "btn btn-primary" %></span>
      <i class="fas fa-cheese fa-4x cheese" data-fa-transform="down-3"></i>
    </div>


    <%= form_with scope: :session, local: true do |f| %>
      <div class="form-group space">
        <%= f.label :email, "メールアドレス" %>
        <%= f.text_field :email, class: "form-control", autofocus: true, placeholder: "登録したメールアドレスを入力してださい" %>
      </div>
      <div class="mt-4"></div>
      <div class="form-group space">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form-control", placeholder: "登録したパスワードを入力してださい" %>
      </div>
      <div class="text-center mt-3">
        <%= f.submit "ログインする", class: "btn btn-info" %>
      </div>
    <% end %>
    
  </div>
</div>
