<%= render "partialnote/normalnav" %>
<div class="noteShowPage">
  <div class="container">

    <h1 class="mt-3 text-center">ノートの詳細</h1>

    <table class="table table-hover table-bordered mt-3">
      <tbody>
        <tr>
          <th><%= Note.human_attribute_name(:id) %></th>
          <td><%= @note.id %></td> 
        </tr>
        <tr>
          <th><%= Note.human_attribute_name(:name) %></th>
          <td><%= @note.name %></td> 
        </tr>
        <tr>
          <th><%= Note.human_attribute_name(:memo1) %></th>
          <td><%= simple_format(h(@note.memo1), {}, sanitize: false, wrapper_tag: "div") %></td>
        </tr>
        <tr>
          <th><%= Note.human_attribute_name(:memo2) %></th>
          <td><%= simple_format(h(@note.memo2), {}, sanitize: false, wrapper_tag: "div") %></td>
        </tr>
        <tr>
          <th><%= Note.human_attribute_name(:created_at) %></th>
          <td><%= @note.created_at %></td> 
        </tr>
      </tbody>
    </table>
    <div class="text-center mt-3">
      <%= link_to "編集", edit_note_path, class: "btn btn-info mr-3" %>
      <%= link_to "削除", note_path, class: "btn btn-danger", method: :delete, data: {confirm: "#{@note.name}を削除してよろしいですか？"} %>
      <%= link_to "ホームへ", root_path, class: "btn btn-primary ml-3" %>
    </div>
  </div>
</div>